/* pages/test1/pages/test1/test3/articleForm/articleForm.wxss */
.page{
  height: 300px;
  display: flex;
  flex-direction: column;
}
.page_hd{
  padding:50rpx 50rpx 100rpx 50rpx;
  text-align: center;
}
.page_title{
  display:inline-block;
  padding:20rpx 40rpx;
  font-size: 32rpx;
  color:#AAAAAA;
  border-bottom:1px solid #CCCCCC
}

.section{
  margin-bottom:80rpx;
}
.section_title{
  text-align: center;
  margin-bottom:15rpx;
  padding-left:10rpx;
  padding-right:10rpx;
}
.section_gap{
  padding:0 30rpx;
}
form .btnarea{
  display:flex;
  flex-direction: column;

}
.section input{
  border: gray 3rpx solid;
  border-radius: 20rpx;
  height:100rpx;
}
.section textarea{
  border: gray 3rpx solid;
  border-radius: 20rpx;
  height:500rpx;
}



.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}