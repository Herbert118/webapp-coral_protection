<view class="page">
  <view class="page__bd">
    <view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
      <form class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <i class="weui-icon-search"></i>
          <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}"
            focus="{{inputShowed}}" bindinput="inputTyping" />
          <span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
        </view>
        <label class="weui-search-bar__label" bindtap="showInput">
          <i class="weui-icon-search"></i>
          <span class="weui-search-bar__text">搜索</span>
        </label>
      </form>
      <view class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
    </view>
  </view>

  <view class = "test">
    <button bindtap="navToForm" type = "primary" style = "background-color:rgb(119, 164, 247)">管理百科</button>
  </view>

  <view class = "page_title">
    <text>珊瑚百科</text>
  </view>

  <view class = "page_body">
    
      <view class ="wikicon" wx:for="{{wikis}}" wx:key = "index">
        <view class = "imagecon">
          <image src = "{{item.imgRoute}}" mode = "heightFix"></image>
        </view>
        <view class = "name">
        <text>{{item.name}}</text>
        </view>
      </view>

  
  </view>

</view>